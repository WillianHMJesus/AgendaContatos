<Page x:ConnectionId='1'
    x:Class="TrabalhoUWP.View.AppSettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TrabalhoUWP.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converter="using:TrabalhoUWP.Convert"
    mc:Ignorable="d">

    <Page.Resources>
        <converter:RadioButtonToNullableIntConverter x:Key="RadioButtonToNullableInt" />
    </Page.Resources>

    <SplitView x:ConnectionId='2' x:Name="splitView" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" 
                                                                               
            OpenPaneLength="220" DisplayMode="CompactOverlay" CompactPaneLength="44">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='3' x:Name="VisualStateGroupScreenWidth">
                <VisualState x:ConnectionId='4' x:Name="VisualStateMinWidth700">
                    <VisualState.Setters>
                        <Setter Target="splitView.(SplitView.IsPaneOpen)" Value="True"/>
                        <Setter Target="splitView.(SplitView.DisplayMode)" Value="CompactInline"/>
                        <Setter Target="listView.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="addAppBarButton.(UIElement.Visibility)" Value="Visible"/>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="700"/>
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:ConnectionId='5' x:Name="VisualStateMinWidth1">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="splitView.(SplitView.IsPaneOpen)" Value="False"/>
                        <Setter Target="splitView.(SplitView.DisplayMode)" Value="CompactOverlay"/>
                        <Setter Target="listView.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="addAppBarButton.(UIElement.Visibility)" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <SplitView.Pane>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" MaxHeight="640" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Button x:ConnectionId='6' Width="44" Height="44" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                    Background="Transparent"                                                          />

                <ScrollViewer Grid.Row="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ScrollViewer Grid.Row="0">
                            <Button x:ConnectionId='10' Background="Transparent"                                                           >
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <SymbolIcon Symbol="Home" Height="24" Width="24" Margin="0,0,12,0"/>
                                        <TextBlock Text="Home" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </ScrollViewer>
                        <ScrollViewer Grid.Row="1">
                            <Button x:ConnectionId='9' Background="Transparent"                                                             >
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <SymbolIcon Symbol="Favorite" Height="24" Width="24" Margin="0,0,12,0"/>
                                        <TextBlock Text="Favoritos" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </ScrollViewer>
                        <ScrollViewer Grid.Row="2">
                            <Button x:ConnectionId='8' Background="Transparent"                                                          >
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <SymbolIcon Symbol="Add" Height="24" Width="24" Margin="0,0,12,0"/>
                                        <TextBlock Text="Novo Contato" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </ScrollViewer>
                    </Grid>
                </ScrollViewer>

                <StackPanel Orientation="Vertical" Grid.Row="2" Margin="0,0,0,48">
                    <Button x:ConnectionId='7' Background="Transparent"                                                          >
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <SymbolIcon Symbol="Setting" Height="24" Width="24" Margin="0,0,12,0"/>
                                <TextBlock Text="Configurações" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>
        </SplitView.Pane>
        <SplitView.Content>
            <StackPanel Margin="24">
                <TextBlock Text="Configurações" Style="{StaticResource TitleTextBlockStyle}" />
                <TextBlock Text="Estilo" Margin="0,20" />

                <RadioButton x:ConnectionId='11' GroupName="AppTheme" Content="Claro" 
                                                                                                                                                                    />
                <RadioButton x:ConnectionId='12' GroupName="AppTheme" Content="Escuro" 
                                                                                                                                                                    />
                <RadioButton x:ConnectionId='13' GroupName="AppTheme" Content="Padrão" 
                                                                                                                                             />
            </StackPanel>
        </SplitView.Content>
    </SplitView>
</Page>

